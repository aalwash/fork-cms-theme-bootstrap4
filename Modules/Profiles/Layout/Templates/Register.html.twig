{# Success #}
{% if registerIsSuccess %}
	<div class="alert alert-success"><p>{{ 'msg.RegisterIsSuccess'|trans }}</p></div>
{% endif %}

{# Error #}
{% if registerHasFormError %}
	<div class="alert alert-danger"><p>{{ 'err.FormError'|trans }}</p></div>
{% endif %}

{% if not registerHideForm %}
	{% form register %}
		<section id="registerForm">
			<fieldset>
				<p{% if txtDisplayNameError %} class="alert alert-danger"{% endif %}>
					<label for="displayName">{{ 'lbl.DisplayName'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans }}">*</abbr></label>
					{% form_field display_name %} {% form_field_error display_name %}
				</p>
				<p{% if txtEmailError %} class="alert alert-danger"{% endif %}>
					<label for="email">{{ 'lbl.Email'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans }}">*</abbr></label>
					{% form_field email %} {% form_field_error email %}
				</p>
				<p{% if txtPasswordError %} class="alert alert-danger"{% endif %}>
					<label for="password">{{ 'lbl.Password'|trans|ucfirst }}<abbr title="{{ 'lbl.RequiredField'|trans }}">*</abbr></label>
					{% form_field password %} {% form_field_error password %}
				</p>
				<p>
					<label for="showPassword">{% form_field show_password %} {{ 'lbl.ShowPassword'|trans|ucfirst }} </label>
				</p>
				<p>
					<input class="inputSubmit" type="submit" value="{{ 'lbl.Register'|trans|ucfirst }}" />
				</p>
			</fieldset>
		</section>
	{% endform %}
{% endif %}
