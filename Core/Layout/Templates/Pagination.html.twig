{% if pagination %}
	{% if pagination.multiple_pages %}
		<nav class="pagination">
			<ul class="pagination">
				<li class="page-item{% if not pagination.show_previous %} disabled{% endif %}">
					{% if pagination.show_previous %}<a href="{{ pagination.previous_url }}" rel="prev nofollow" title="{{ 'lbl.PreviousPage'|trans|ucfirst }}">{% endif %}
						{% if not pagination.show_previous %}<span>{% endif %}
						&lsaquo; {{ 'lbl.PreviousPage'|trans|ucfirst }}
					{% if not pagination.show_previous %}</span>{% endif %}
					{% if pagination.show_previous %}</a>{% endif %}
				</li>

				{% if pagination.first %}
					{% for pagination in pagination.first %}
						<a href="{{ pagination.url }}" rel="nofollow" title="{{ 'lbl.GoToPage'|trans|ucfirst }} {{ pagination.label }}">{{ pagination.label }}</a>
					{% endfor %}
					<li class="ellipsis"><span>&hellip;</span></li>
				{% endif %}

				{% for pagination in pagination.pages %}
					<li{% if pagination.current %} class="page-item active"{% endif %}>
						{% if not pagination.current %}
							<a href="{{ pagination.url }}" rel="nofollow" title="{{ 'lbl.GoToPage'|trans|ucfirst }} {{ pagination.label }}">
						{% endif %}
						{% if pagination.current %}<span>{% endif %}
							{{ pagination.label }}
							{% if pagination.current %}</span>{% endif %}
						{% if not pagination.current %}
							</a>
						{% endif %}
					</li>
				{% endfor %}

				{% if pagination.last %}
					<li class="ellipsis"><span>&hellip;</span></li>
					{% for pagination in pagination.last %}
						<li>
						<a href="{{ pagination.url }}" rel="nofollow" title="{{ 'lbl.GoToPage'|trans|ucfirst }} {{ pagination.label }}">{{ pagination.label }}</a>
						</li>{% endfor %}
				{% endif %}

				<li class="page-item{% if not pagination.show_next %} disabled{% endif %}">
					{% if pagination.show_next %}
						<a href="{{ pagination.next_url }}" rel="next nofollow" title="{{ 'lbl.NextPage'|trans|ucfirst }}">
					{% endif %}
						{% if not pagination.show_next %}<span>{% endif %}
							{{ 'lbl.NextPage'|trans|ucfirst }} &#8250;
						{% if not pagination.show_next %}</span>{% endif %}
					{% if pagination.show_next %}
						</a>
					{% endif %}
				</li>
			</ul>
		</nav>
	{% endif %}
{% endif %}
